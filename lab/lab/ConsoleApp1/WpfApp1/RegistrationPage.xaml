<Page x:Class="WpfApp1.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Реєстрація" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />

            <!-- Username TextBox -->
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Text="Ім'я користувача"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />

            <!-- Email TextBox -->
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Text="Email"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />

            <!-- PasswordBox -->
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Tag="Пароль"
                         GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" />

            <Button Content="Зареєструватися" Click="RegisterButton_Click" Background="#2196F3" Foreground="White" />
        </StackPanel>
    </Grid>
</Page>
