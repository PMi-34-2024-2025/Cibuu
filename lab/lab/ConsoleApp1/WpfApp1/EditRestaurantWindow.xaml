<Window x:Class="WpfApp1.EditRestaurantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати заклад" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Назва" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Опис" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Тип кухні" Margin="0,0,0,5"/>
            <TextBox x:Name="CuisineTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Локація" Margin="0,0,0,5"/>
            <TextBox x:Name="LocationTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Рейтинг" Margin="0,0,0,5"/>
            <TextBox x:Name="RatingTextBox" Margin="0,0,0,10"/>

            <Button Content="Зберегти" Width="100" HorizontalAlignment="Center" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
